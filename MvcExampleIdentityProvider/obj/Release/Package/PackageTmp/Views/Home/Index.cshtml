@{
    ViewBag.Title = "Identity Provider";
}

<h1>Welcome to the MVC Identity Provider Site</h1>
<p>
	You are logged in as @User.Identity.Name.
</p>
<p>
    @Html.ActionLink("SSO to the Service Provider", "SingleSignOn",  null, new {title="Initiates SAML single sign-on to the service provider."})
</p>

<section id="logoutForm">
@using (Html.BeginForm("Logout", "Home")) {
    <p>
    <input type="submit" value="Logout" />
    </p>
}
</section>
